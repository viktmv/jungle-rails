<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <div class="row reviews-area text-center">
      <% @product.reviews.each do |review| %>
        <article class="review">
          <b class="h4 reviewer"><%= review.user.name %>:</b>
          <span class="description"><%= review.description %></span>
          <span class="rating">My rating: <span class="rating-num"><%= review.rating %></span>/5</span>
          <% if review.user == current_user %>
            <%= link_to fa_icon('trash'),
                        [@product, review],
                        class: 'btn btn-sm btn-danger review-delete-btn',
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>
          <% end %>
        </article>
      <% end %>
    </div>
    <% if current_user.present? %>
      <div class="row reviews-form">
        <%= form_for :review, url: product_reviews_path(@product) do |f| %>
          <%= f.label :description %>:<br>
          <%= f.text_area :description %><br>

          <%= f.label :rating %>:
          <%= f.select :rating, [1,2,3,4,5] %><br />

          <%= f.submit %>
        <% end  %>
      </div>
      <% end %>
  </article>

</section>
