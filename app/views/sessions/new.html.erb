<div class="jumbotron">
  <h2>Login</h2>
  <%= form_tag '/login' do %>
    <div class="field">
      Email:<br>
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      Password:<br>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Submit" %>

  <% end %>
</div>
